{
  "parser": "babel-eslint",
  "plugins": [
    "react",
    "react-native"
  ],
  "parserOptions": {
    "ecmaFeatures": {
        "jsx": true,
        "modules": true
    }
  },
  "extends": [
    "eslint:recommended",
    "plugin:react/recommended",
    "airbnb-base"
  ],
  "rules" : {
    "arrow-body-style" : "warn",
    "linebreak-style" : "off",
    "no-use-before-define" : "off",
    "class-methods-use-this" : "off",
    "react/no-deprecated" : "off",
    "no-underscore-dangle" : "off",
    "react/display-name" : "off"
  }
}
